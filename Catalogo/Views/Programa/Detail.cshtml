@model Catalogo.Models.Programa
@{
    Layout = "../Shared/_CenteredLayout.cshtml";

    ViewBag.Title = "Detalle de Programa";
}
<h2 class="page-header">
    @ViewBag.Title
</h2>

<div class="entity-editor" ng-controller="ProgramaController as programa">
    <div ng-show="programa.response.result == false" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="title">
            Error</h4>
        <p>
            {{programa.response.value}}</p>
    </div>
    <form class="form-horizontal" ng-init="item=@Html.Raw(Json.Encode(Model))" data-toggle="validator" >
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Código</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{item.Id}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Nombre</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{item.Nombre}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Tipo</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{item.TipoValor}}</p>
            </div>
        </div>
        <div class="form-group" ng-show="item.PadreNombre">
            <label class="col-sm-2 control-label">
                Padre</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{item.PadreNombre}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Orden</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{item.Orden}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Estado</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{item.EstadoValor}}</p>
            </div>
        </div>
        <div class="form-group" ng-show="item.Url != '' && item.Url">
            <label class="col-sm-2 control-label">
                Url</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    {{item.Url}}</p>
            </div>
        </div>
        <label class="control-label text-center">
            Accesos
        </label>
        <div class="form-group" ng-show="item.CheckSel">
            <label class="col-sm-2 control-label">
            </label>
            <div class="col-sm-10">
                Seleccionar<br>
            </div>
        </div>
        <div class="form-group" ng-show="item.CheckIns">
            <label class="col-sm-2 control-label">
            </label>
            <div class="col-sm-10">
                Insertar<br>
            </div>
        </div>
        <div class="form-group" ng-show="item.CheckMod">
            <label class="col-sm-2 control-label">
            </label>
            <div class="col-sm-10">
                Modificar<br>
            </div>
        </div>
        <div class="form-group" ng-show="item.CheckEli">
            <label class="col-sm-2 control-label">
            </label>
            <div class="col-sm-10">
                Eliminar<br>
            </div>
        </div>
        <div class="form-group" ng-show="item.CheckImp">
            <label class="col-sm-2 control-label">
            </label>
            <div class="col-sm-10">
                Imprimir<br>
            </div>
        </div>


        <div class="text-right">
            <a ng-click="programa.index(tab)" class="btn btn-sm btn-link" data-ajax>Cancelar</a>
            <a  ng-click="programa.access(tab, item.Id)" class="btn btn-sm btn-default" data-ajax>
                <span class="glyphicon glyphicon-user"></span>
                <text class="hidden-xs">Accesos</text>
            </a>       
            <a  ng-click="programa.accessgroup(tab, item.Id)" class="btn btn-sm btn-default" data-ajax>
                <span class="glyphicon glyphicon-user glyphicon-xss-left"></span>
                <span class="glyphicon glyphicon-user"></span>
                <span class="glyphicon glyphicon-user glyphicon-xss-right"></span>
                <text class="hidden-xs">Accesos</text>
            </a>        
            <a ng-click="programa.edit(tab,item.Id)" class="btn btn-sm btn-primary">
                Modificar
                </a>
        </div>
    </form>
</div>
<script type="text/javascript">
    $('form[data-toggle="validator"]').validator();
</script>
